<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} %-5level [%logger{0}] %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="net.dv8tion" level="INFO"/>
    <logger name="SteamBot" level="INFO"/>
    <logger name="net.dv8tion.jda.internal.requests.WebSocketClient" level="WARN"/>

    <root level="debug">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
